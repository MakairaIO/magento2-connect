<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/makaira-headless/cart" method="GET">
        <service class="Makaira\Headless\Api\CartInterface" method="get"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/makaira-headless/cart" method="POST">
        <service class="Makaira\Headless\Api\CartInterface" method="add"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/makaira-headless/cart/:variantId" method="PUT">
        <service class="Makaira\Headless\Api\CartInterface" method="update"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/makaira-headless/cart/:variantId" method="DELETE">
        <service class="Makaira\Headless\Api\CartInterface" method="delete"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/makaira-headless/user/" method="GET">
        <service class="Makaira\Headless\Api\UserInterface" method="get"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
